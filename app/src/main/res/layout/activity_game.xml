<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/hand_enemy"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="6">
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="1dp">

                <com.developlstu.durakonline.views.CardsView
                    android:id="@+id/enemyCard1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="1dp">
                <com.developlstu.durakonline.views.CardsView
                    android:id="@+id/enemyCard2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="1dp">
                <com.developlstu.durakonline.views.CardsView
                    android:id="@+id/enemyCard3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="1dp">
                <com.developlstu.durakonline.views.CardsView
                    android:id="@+id/enemyCard4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="1dp">
                <com.developlstu.durakonline.views.CardsView
                    android:id="@+id/enemyCard5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="1dp">
                <com.developlstu.durakonline.views.CardsView
                    android:id="@+id/enemyCard6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="2"
            android:weightSum="6"
            android:orientation="horizontal"
            android:gravity="right">

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical">
                <Button
                    android:id="@+id/btnbito"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Бито">
                </Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:rotation="90.0">

                <com.developlstu.durakonline.views.CardsView
                    android:id="@+id/trump"
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="4dp">
                <com.developlstu.durakonline.views.CardsView
                    android:id="@+id/deck"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="4"
            android:weightSum="4"
            android:orientation="vertical"
            android:gravity="bottom">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="3"
                    android:orientation="horizontal"
                    android:weightSum="6"
                    android:layout_marginBottom="25dp">
                    <FrameLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="1dp"
                        android:orientation="vertical">
                        <com.developlstu.durakonline.views.CardsView
                            android:id="@+id/cardonfieldenemy1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible" />
                        <com.developlstu.durakonline.views.CardsView
                            android:id="@+id/cardonfield1"
                            android:layout_width="match_parent"
                            android:layout_marginTop="50dp"
                            android:layout_height="wrap_content"
                            android:visibility="visible" />
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="1dp"
                        android:orientation="vertical">
                        <com.developlstu.durakonline.views.CardsView
                            android:id="@+id/cardonfieldenemy2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible" />
                        <com.developlstu.durakonline.views.CardsView
                            android:id="@+id/cardonfield2"
                            android:layout_width="match_parent"
                            android:layout_marginTop="50dp"
                            android:layout_height="wrap_content"
                            android:visibility="visible" />
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="1dp"
                        android:orientation="vertical">
                        <com.developlstu.durakonline.views.CardsView
                            android:id="@+id/cardonfieldenemy3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible" />
                        <com.developlstu.durakonline.views.CardsView
                            android:id="@+id/cardonfield3"
                            android:layout_width="match_parent"
                            android:layout_marginTop="50dp"
                            android:layout_height="wrap_content"
                            android:visibility="visible" />
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="1dp"
                        android:orientation="vertical">
                        <com.developlstu.durakonline.views.CardsView
                            android:id="@+id/cardonfieldenemy4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible" />
                        <com.developlstu.durakonline.views.CardsView
                            android:id="@+id/cardonfield4"
                            android:layout_width="match_parent"
                            android:layout_marginTop="50dp"
                            android:layout_height="wrap_content"
                            android:visibility="visible" />
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="1dp"
                        android:orientation="vertical">
                        <com.developlstu.durakonline.views.CardsView
                            android:id="@+id/cardonfieldenemy5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible" />
                        <com.developlstu.durakonline.views.CardsView
                            android:id="@+id/cardonfield5"
                            android:layout_width="match_parent"
                            android:layout_marginTop="50dp"
                            android:layout_height="wrap_content"
                            android:visibility="visible" />
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="1dp"
                        android:orientation="vertical">
                        <com.developlstu.durakonline.views.CardsView
                            android:id="@+id/cardonfieldenemy6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible" />
                        <com.developlstu.durakonline.views.CardsView
                            android:id="@+id/cardonfield6"
                            android:layout_width="match_parent"
                            android:layout_marginTop="50dp"
                            android:layout_height="wrap_content"
                            android:visibility="visible" />
                    </FrameLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/hand_player"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="6">

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1">

                <com.developlstu.durakonline.views.CardsView
                    android:id="@+id/card1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1">

                <com.developlstu.durakonline.views.CardsView
                    android:id="@+id/card2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1">

                <com.developlstu.durakonline.views.CardsView
                    android:id="@+id/card3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1">

                <com.developlstu.durakonline.views.CardsView
                    android:id="@+id/card4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1">

                <com.developlstu.durakonline.views.CardsView
                    android:id="@+id/card5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1">

                <com.developlstu.durakonline.views.CardsView
                    android:id="@+id/card6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>